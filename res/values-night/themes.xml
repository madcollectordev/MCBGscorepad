<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MCBGScorepad" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/myPrimaryDark</item>
        <item name="colorPrimaryVariant">@color/myStatusbarDark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/myscondaryDark</item>
        <item name="colorSecondaryVariant">@color/light_orange</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Customize your theme here. -->
        <item name="cardBackgroundColor">@color/mycardsDark</item>
    </style>
    <style name="Theme.MCBGScorepad.PopupOverlay" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="colorOnPrimary">@color/white</item>
    </style>

</resources>